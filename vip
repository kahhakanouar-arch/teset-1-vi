-- === PROTECTED ID SYSTEM ===
local AllowedIDs = {
    9212376227, 5457204971, 3404223012, 9221990104, 10174280415,
    8324859397, 3123124422, 9999999990, 9229999999, 8305396045,
    10053926792, 9090295546, 10230482489, 9183871127, 10290977351,
    9030856047, 10350312793, 3599536907, 10439467726, 10065160501,4800883147,10468020062,1769527462,0,0,0,0,0,0,0
}

local function isAllowed()
    for _, id in ipairs(AllowedIDs) do
        if Player.UserId == id then return true end
    end
    return false
end

if not isAllowed() then
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "âŒ Access Denied",
        Text = "Your ID (" .. Player.UserId .. ") is not authorized! Contact Anouar777x.",
        Duration = 10
    })
    return
end

